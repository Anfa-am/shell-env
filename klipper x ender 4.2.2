[bltouch]
sensor_pin: ^PA7
control_pin: PB0
x_offset: -42.0
y_offset: -5.0
z_offset: 1.5
pin_move_time: 0.4
speed: 20
stow_on_each_sample: False  
probe_with_touch_mode: True

[bed_mesh]
speed: 120
horizontal_move_z: 5
mesh_min: 15, 15
mesh_max: 190, 205
probe_count: 5,5
probe_count: 5,5
algorithm: bicubic
fade_start: 1
fade_end: 10
fade_target: 0

[safe_z_home]
home_xy_position: 150,125
speed: 50
z_hop: 10                 
z_hop_speed: 10


[board_pins]
aliases:
  EXP1_1=PC6,EXP1_3=PB10,EXP1_5=PB14,EXP1_7=PB12,EXP1_9=<GND>,
  EXP1_2=PB2,EXP1_4=PB11,EXP1_6=PB13,EXP1_8=PB15,EXP1_10=<5V>,
  PROBE_IN=PB0,PROBE_OUT=PB1,FIL_RUNOUT=PC6
